{
    "name": "aerogel",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "pnpm run -r --workspace-concurrency Infinity build",
        "cy:test": "pnpm run -r --workspace-concurrency Infinity --parallel cy:test",
        "docs:build": "pnpm docs:build:vitepress && pnpm docs:build:playground",
        "docs:build:playground": "pnpm build -w playground && cp playground/dist docs/.vitepress/dist/playground -r",
        "docs:build:vitepress": "vitepress build docs",
        "docs:dev": "vitepress dev docs",
        "lint": "pnpm run -r --workspace-concurrency Infinity --parallel lint",
        "test": "vitest --run",
        "test:ci": "vitest --run --reporter verbose",
        "verify": "pnpm run -r --workspace-concurrency Infinity --parallel verify"
    },
    "packageManager": "pnpm@10.27.0",
    "devDependencies": {
        "@iconify/json": "^2.2.131",
        "@intlify/unplugin-vue-i18n": "^6.0.5",
        "@noeldemartin/eslint-config-typescript": "0.1.1-next.8da46d7532acbe6ee4126f410141b7f281ec349a",
        "@noeldemartin/eslint-config-vue": "0.1.1-next.8da46d7532acbe6ee4126f410141b7f281ec349a",
        "@noeldemartin/scripts": "catalog:",
        "@noeldemartin/solid-utils": "^0.6.1",
        "@noeldemartin/testing": "0.0.0-next.2d44364d125aabe764d3cf01d20b66e0923a7a19",
        "@noeldemartin/utils": "catalog:",
        "@total-typescript/ts-reset": "^0.4.2",
        "@tsconfig/node24": "^24.0.3",
        "@types/mustache": "^4.2.2",
        "@vue/tsconfig": "^0.7.0",
        "cypress": "14.2.0",
        "prettier": "^3.6.2",
        "prettier-eslint-cli": "^8.0.1",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "soukai": "catalog:",
        "soukai-solid": "catalog:",
        "typescript": "^5.8.2",
        "unplugin-icons": "^22.1.0",
        "unplugin-vue-components": "^28.4.1",
        "vite": "^6.2.2",
        "vite-plugin-dts": "4.5.0",
        "vitepress": "^1.6.3",
        "vitest": "^3.0.9",
        "vue": "^3.5.13",
        "vue-i18n": "^11.1.2",
        "vue-router": "^4.5.0",
        "vue-tsc": "^2.2.8"
    },
    "eslintConfig": {
        "extends": [
            "@noeldemartin/eslint-config-typescript"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "plugins": [
            "prettier-plugin-tailwindcss"
        ]
    }
}
