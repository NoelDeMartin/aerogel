{
    "private": true,
    "scripts": {
        "build": "pnpm -r --if-present build",
        "cy:test": "pnpm -r --if-present cy:test",
        "cy:test-snapshots": "docker run -it -u `id -u ${whoami}` -e CYPRESS_SNAPSHOTS=true -v ./:/app -w /app cypress/base:18.16.0 sh -c \"npx cypress install && pnpm run cy:test\"",
        "cy:test-snapshots:ci": "docker run -e CYPRESS_SNAPSHOTS=true -v ./:/app -w /app cypress/base:18.16.0 sh -c \"npx cypress install && pnpm run cy:test\"",
        "dev": "pnpm -r --if-present dev",
        "docs:build": "pnpm run docs:build:vitepress && pnpm run docs:build:playground",
        "docs:build:playground": "pnpm --filter=playground build && cp playground/dist docs/.vitepress/dist/playground -r",
        "docs:build:vitepress": "vitepress build docs",
        "docs:dev": "vitepress dev docs",
        "lint": "pnpm -r --if-present lint",
        "test": "pnpm -r --if-present test",
        "test:ci": "pnpm -r --if-present test:ci",
        "verify": "pnpm -r --if-present verify"
    },
    "devDependencies": {
        "@iconify/json": "^2.2.131",
        "@intlify/unplugin-vue-i18n": "^6.0.5",
        "@noeldemartin/eslint-config-typescript": "0.1.1-next.8da46d7532acbe6ee4126f410141b7f281ec349a",
        "@noeldemartin/eslint-config-vue": "0.1.1-next.8da46d7532acbe6ee4126f410141b7f281ec349a",
        "@noeldemartin/scripts": "0.3.0-next.73e253ff6238acee8a0199922401c4be310129bd",
        "@noeldemartin/solid-utils": "^0.6.1",
        "@noeldemartin/testing": "0.0.0-next.3aa03a51f580a9508bbc982c55eda4fd2b302f35",
        "@noeldemartin/utils": "0.7.1-next.5f7bc66cad4aaa2dce4a2314e99d562ff3ab993b",
        "@total-typescript/ts-reset": "^0.4.2",
        "@tsconfig/node22": "^22.0.1",
        "@types/mustache": "^4.2.2",
        "@vue/tsconfig": "^0.7.0",
        "cypress": "14.2.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "soukai": "0.6.2-next.f876465de24d377349d14c4ce0def484767cc7a3",
        "soukai-solid": "0.6.2-next.f876465de24d377349d14c4ce0def484767cc7a3",
        "typescript": "^5.8.2",
        "unplugin-icons": "^22.1.0",
        "unplugin-vue-components": "^28.4.1",
        "vite": "^6.2.2",
        "vite-plugin-dts": "4.5.0",
        "vitepress": "^1.6.3",
        "vitest": "^3.0.9",
        "vue": "^3.5.13",
        "vue-i18n": "^11.1.2",
        "vue-router": "^4.5.0",
        "vue-tsc": "^2.2.8"
    },
    "pnpm": {
        "overrides": {
            "@noeldemartin/solid-utils": "^0.6.1",
            "@noeldemartin/utils": "0.7.1-next.5f7bc66cad4aaa2dce4a2314e99d562ff3ab993b",
            "soukai": "0.6.2-next.f876465de24d377349d14c4ce0def484767cc7a3",
            "soukai-solid": "0.6.2-next.f876465de24d377349d14c4ce0def484767cc7a3",
            "typescript": "^5.8.2"
        }
    },
    "eslintConfig": {
        "extends": [
            "@noeldemartin/eslint-config-typescript"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "plugins": [
            "prettier-plugin-tailwindcss"
        ]
    }
}
