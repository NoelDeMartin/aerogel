        "dompurify": "^3.0.3",
        "marked": "^5.0.4",
        "pinia": "^2.1.6",
        "vue": "^3.3.0"
    },
    "devDependencies": {
        "@aerogel/vite": "*",
        "@histoire/plugin-vue": "^0.17.6",
