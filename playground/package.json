{
    "private": true,
    "type": "module",
    "repository": "github:NoelDeMartin/aerogel",
    "scripts": {
        "build": "vite build",
        "cy:dev": "concurrently --kill-others \"pnpm test:serve-app\" \"pnpm test:serve-pod\" \"pnpm cy:open\"",
        "cy:open": "cypress open --config-file ./cypress/cypress.config.ts --e2e --browser chromium",
        "cy:run": "cypress run --config-file ./cypress/cypress.config.ts",
        "cy:test": "start-server-and-test test:serve-app http-get://localhost:5001 test:serve-pod http-get://localhost:3000 cy:run",
        "dev": "vite",
        "dev:serve-pod": "community-solid-server -c @css:config/file.json -f ./solid",
        "lint": "noeldemartin-lint src cypress",
        "test:serve-app": "vite --port 5001 --mode testing",
        "test:serve-pod": "community-solid-server -l warn"
    },
    "dependencies": {
        "@aerogel/core": "workspace:*",
        "@aerogel/plugin-i18n": "workspace:*",
        "@aerogel/plugin-local-first": "workspace:*",
        "@aerogel/plugin-routing": "workspace:*",
        "@aerogel/plugin-solid": "workspace:*",
        "@aerogel/plugin-soukai": "workspace:*",
        "@noeldemartin/solid-utils": "catalog:",
        "@noeldemartin/utils": "catalog:",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/typography": "^0.5.16",
        "soukai": "catalog:",
        "soukai-solid": "catalog:",
        "tailwindcss": "^4.1.4"
    },
    "devDependencies": {
        "@aerogel/cli": "workspace:*",
        "@aerogel/cypress": "workspace:*",
        "@aerogel/vite": "workspace:*",
        "@noeldemartin/scripts": "catalog:",
        "@solid/community-server": "^7.1.3",
        "@types/node": "catalog:",
        "autoprefixer": "^10.4.14",
        "concurrently": "^8.0.1",
        "cypress": "14.2.0",
        "eslint": "catalog:",
        "eslint-plugin-vue": "catalog:",
        "publint": "catalog:",
        "start-server-and-test": "^2.0.0"
    },
    "eslintConfig": {
        "extends": [
            "@noeldemartin/eslint-config-vue"
        ]
    }
}
